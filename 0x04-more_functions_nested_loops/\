#include "main.h"
/**
 * print_square -  prints a square
 *
 * @size: no of # squares
 *
 * if 0 or less print a new line
 */
void print_square(int size)
{
	int i, j;
	{
		for (i = 0; i < size; i++)
		{
			for (j = 0; j < size; j++)
			{
				_putchar ('#');
			}
			_putchar ('\n');
		}
	}
	else
	{
		_putchar ('\n');
	}
}
